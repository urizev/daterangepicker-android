<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:background="#c83430"
        android:padding="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">
        <TextView
            android:id="@+id/selection_from_day"
            tools:text="13"
            android:gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            style="@style/Base.TextAppearance.AppCompat.Display2"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selection_from_month"
                tools:text="MARCH"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse"/>
            <TextView
                android:id="@+id/selection_from_year"
                tools:text="2017"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse"/>
        </LinearLayout>

        <TextView
            android:id="@+id/range_divider"
            android:text="@string/range_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorPrimaryInverse"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:id="@+id/selection_to_day"
            tools:text="13"
            android:gravity="end"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            style="@style/Base.TextAppearance.AppCompat.Display2"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/selection_to_month"
                tools:text="SEPTEMBER"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse"/>
            <TextView
                android:id="@+id/selection_to_year"
                tools:text="2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Subhead.Inverse"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/calendar_frame"
        android:visibility="visible"
        android:paddingTop="8dp"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/calendar_prev"
            android:src="@drawable/ic_prev_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless" />
        <ImageButton
            android:id="@+id/calendar_next"
            android:src="@drawable/ic_next_24dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless" />
        <TextView
            android:id="@+id/calendar_header"
            tools:text="September 2017"
            android:gravity="center"
            android:layout_toRightOf="@id/calendar_prev"
            android:layout_toEndOf="@id/calendar_prev"
            android:layout_toLeftOf="@id/calendar_next"
            android:layout_toStartOf="@id/calendar_next"
            android:layout_alignBottom="@id/calendar_next"
            android:layout_alignTop="@id/calendar_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.TextAppearance.AppCompat.Subhead"/>
        <com.urizev.daterangepicker.lib.DateRangeView
            android:id="@+id/calendar_range"
            app:drp_rowHeight="40dp"
            android:layout_below="@id/calendar_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:visibility="invisible"
        android:clipToPadding="false"
        android:layout_below="@id/header"
        android:paddingTop="@dimen/md_listitem_vertical_margin"
        android:paddingBottom="@dimen/md_listitem_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/md_listitem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>